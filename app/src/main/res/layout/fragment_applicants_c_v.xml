<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".viewapplicants.ApplicantsCVFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <TextView
          android:id="@+id/cv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/cv"
          android:textSize="14sp"
          android:layout_marginTop="20dp"
          android:layout_marginStart="15dp"
          android:textStyle="bold"
          android:textColor="#222741"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="15dp"
          android:background="@drawable/edit_profile_bg"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:layout_marginTop="15dp"
          android:elevation="5dp">

          <ImageView
              android:id="@+id/cv_image"
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:src="@drawable/cv_placeholder"
              android:layout_margin="10dp"/>

          <Button
              android:id="@+id/view_cv"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="@drawable/btn_background"

              android:layout_marginTop="5dp"
              android:text="@string/view_cv"/>


      </LinearLayout>

      <TextView
          android:id="@+id/portfolio"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Other"
          android:textSize="14sp"
          android:layout_marginTop="20dp"
          android:layout_marginStart="15dp"
          android:textStyle="bold"
          android:textColor="#222741"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="15dp"
          android:background="@drawable/edit_profile_bg"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:layout_marginTop="15dp"
          android:elevation="5dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Click to View Applicants Answers on Questions in detail"
          android:textStyle="bold"
          android:textColor="@color/LightText"/>

          <Button
              android:id="@+id/view_question_answers"
              android:layout_width="240dp"
              android:layout_height="50dp"
              android:layout_marginTop="5dp"
              android:layout_gravity="center_horizontal"
              android:background="@drawable/btn_background"
              android:text="View Question Answers"/>


      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="15dp"
          android:background="@drawable/edit_profile_bg"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:layout_marginBottom="20dp"
          android:layout_marginTop="15dp"
          android:elevation="5dp">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Click to View Applicants Protfolio Website"
              android:textStyle="bold"
              android:textColor="@color/LightText"/>

          <Button
              android:id="@+id/view_portfolio"
              android:layout_width="240dp"
              android:layout_height="50dp"
              android:layout_marginTop="5dp"
              android:layout_gravity="center_horizontal"

              android:background="@drawable/btn_background"
              android:text="@string/view_portfolio"/>


      </LinearLayout>
